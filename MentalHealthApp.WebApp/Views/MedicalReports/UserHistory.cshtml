@model List<MentalHealthApp.BusinessLogic.Implementation.MedicalReports.ViewModels.PacientMedicalReportVM>
<header>
    <link rel="stylesheet" src="//cdnjs.cloudflare.com/ajax/libs/font-awesome/4.2.0/css/font-awesome.min.css"/>
    <link rel="stylesheet" src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css"/>
    <link  rel="stylesheet" href="~/css/userMedicalReportsCards.css"/>

 <!-- google font -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,400;0,500;0,600;0,700;0,800;1,200;1,300;1,400;1,500;1,600;1,700&display=swap" rel="stylesheet"> 
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/css/bootstrap.min.css" integrity="sha384-r4NyP46KrjDleawBgD5tp8Y7UzmLA05oM1iAEQ17CSuDqnUK2+k9luXQOfXJCJ4I" crossorigin="anonymous">

     <script src="~/js/appointment/viewAppoinments.js"></script>
 </header>  
   <!-- BREADCRUM-PART START -->
      
      <section class="breadcrumb-bar">
          <div class="container-fluid">
              <div class="row">
                  <div class="col-lg-12 col-md-12 col-12">
                      <nav class="page-breadcrum" aria-label="breadcrumb">
                            <ol class="breadcrumb">
                              <li class="breadcrumb-item"><a asp-action ="UserProfile" asp-controller="Profile"> Profil </a></li>
                             <li class="breadcrumb-item active" aria-current="page">Istoric Medical</li>

                              </ol>
                    </div>
                </div>
            </section>
        <!-- BREADCRUM-PART END -->
<h1 style="color: rgb(255, 255, 255);
    font-size: 1.4em; ">Istoric Medical<br>
        </h1>
<div class="main-container" style=" margin-top: 10%;   display: flex; justify-content: center;">

@foreach(var report in @Model)
        {
<section class="container" >
    <div class="page-header">
 
    </div>
    <div class="row active-with-click" style="--bs-gutter-x: 8.5rem; margin-right: calc(var(--bs-gutter-x) * 4); --bs-gutter-x: 7.2rem; margin-left: calc(var(--bs-gutter-x) * 0); margin-top: calc(var(--bs-gutter-y) * 2.2);">
        <div class="col-md-4 col-sm-6 col-xs-12" style="width: 70%;     --bs-gutter-x: 7.2rem;">
            <article class="material-card Red" style="--bs-gutter-y: 1.2rem;">
                <h2>
                    <span>@report.Doctor</span>
                    <strong>
                        <i class="fa fa-fw fa-star"></i>
                        @report.ReportDate
                    </strong>
                    <span>Diagnostic: @report.Condition</span>
                </h2>      
                                <div class="mc-content">
                    <div class="img-container">
                        <img style="height: 90%;" class="img-responsive" src="https://thumb7.shutterstock.com/display_pic_with_logo/3395354/491721991/stock-vector-doctor-holding-clipboard-and-takes-notes-on-it-medical-report-flat-vector-illustration-491721991.jpg">
                    </div>
                </div>
                                <a style="left: 5%;" class="mc-btn-action" asp-action="ViewAReport" asp-controller="MedicalReports" asp-route-id="@report.Id">
                    <i class="fa fa-bars"></i>
                </a>
            </article>
        </div>  
    </div>
</section>

}

</div>